@model UserLoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optional if you want layout
}

<style>
    body {
        background: linear-gradient(to right, #74ebd5, #acb6e5);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        background-color: #fff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

        .login-card h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #333;
        }

    .form-control:focus {
        border-color: #6c63ff;
        box-shadow: 0 0 0 0.2rem rgba(108, 99, 255, 0.25);
    }

    .btn-custom {
        background-color: #6c63ff;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #554fd8;
        }

    .register-link {
        display: block;
        text-align: center;
        margin-top: 1rem;
        color: #6c63ff;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h2>Login</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form method="post" asp-controller="Login" asp-action="Index" novalidate>
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-custom">Login</button>
            </div>
        </form>

        <a asp-action="Register" class="register-link">Don't have an account? Register here</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
