@model UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optional
}



<div class="register-container">
    <div class="register-card">
        <h2>Create Account</h2>

        <form method="post" asp-controller="Login" asp-action="Register" novalidate>
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoleId" class="form-label"></label>
                <select asp-for="RoleId" class="form-select">
                    <option value="2">Customer</option>
                    @* <option value="1">Admin</option> *@
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-purple">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
