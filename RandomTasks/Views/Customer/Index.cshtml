@{
    ViewData["Title"] = "S3 Uploader";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3>☁️ AWS S3 File Uploader</h3>
        </div>
        <div class="card-body">

            <form method="post" enctype="multipart/form-data" asp-controller="Customer" asp-action="Index">

                <div class="mb-3">
                    <label class="form-label">Bucket Name:</label>
                    <input type="text" name="bucketName" class="form-control"
                           placeholder="e.g. quantum-shop-assets-vishal"
                           value="@ViewBag.BucketName" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Select Image:</label>
                    <input type="file" name="file" class="form-control" accept="image/*" required />
                </div>

                <button type="submit" class="btn btn-success">Upload to S3</button>
            </form>

            <hr />

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-warning">@ViewBag.Message</div>
            }

            @if (ViewBag.ImageUrl != null)
            {
                <div class="text-center mt-4">
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>

                    <h5>Here is your uploaded file:</h5>
                    <img src="@ViewBag.ImageUrl"
                         alt="Uploaded Image"
                         class="img-fluid rounded shadow-lg border border-3 border-white"
                         style="max-height: 400px; object-fit: cover; transform: rotate(-2deg);" />
                </div>
            }
        </div>
    </div>
</div>